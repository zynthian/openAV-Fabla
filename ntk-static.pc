prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: ntk
Description: Non ToolKit
Version: 1.3.0

Requires: cairo >= 1.9.0
Requires.private: x11 xft
Libs: -L${libdir} -l:libntk.a -L/usr/lib -lcairo -lX11 -lXft -lfontconfig
Cflags: -I${includedir}/ntk -pthread -D_LARGEFILE64_SOURCE -D_FILE_OFFSET_BITS=64
